<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="90dp"
    android:layout_marginTop="6dp"
    android:gravity="end"
    android:elevation="8dp"
    android:id="@+id/recycler_item_id">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_id"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_marginStart="1dp"
            android:id="@+id/linear_outside_id">

            <RelativeLayout
                android:id="@+id/linear_inside1_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recycler_item_name_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="15dp"
                    android:text="Name"
                    android:textColor="#F44336"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recycler_item_city_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="15dp"
                    android:textStyle="bold"
                    android:text="City"
                    android:textColor="#F44336"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/recycler_item_blood_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:paddingStart="15dp"
                    android:text="A+"
                    android:textStyle="bold"
                    android:textColor="#F44336"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linear_inside2_id"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/call_image_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/call" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>